<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="page_title">
        <item name="android:layout_height">@dimen/page_title_height</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="back_button_style" parent="button_style">
        <item name="android:drawableLeft">@drawable/title_btn_back</item>
        <item name="android:paddingRight">5dip</item>
    </style>
    <style name="button_style">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_height">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>
    <style name="page_title_str">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/title_str_color</item>
    </style>

</resources>
