                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加用药："
                        android:textSize="18sp" />
                    <Spinner
                        android:id="@+id/spinner_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg">
                    </Spinner>
                    <EditText
                        android:id="@+id/sleep_latency4"
                        android:layout_width="wrap_content"
